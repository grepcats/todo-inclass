@model IEnumerable<ToDoList.Models.Category>

@{
    ViewData["Title"] = "Categoreos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var listCategory in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelCategory => listCategory.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = listCategory.CategoryId })
            </td>
        </tr>
    }
</table>

<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>