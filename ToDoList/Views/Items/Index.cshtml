@model IEnumerable<ToDoList.Models.Item>

@{
    ViewData["Title"] = "Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>To Do List</h2>
<hr />
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var listItem in Model)
    {
        <tr>
            <td>
                @using (Html.BeginForm("Done", "Items", new { id = listItem.ItemId}))
            {
                <button type="submit">Done</button>
            }

            </td>
            <td>
            @if (listItem.Done.Equals(false))
            {
                <span>@Html.DisplayFor(modelItem => listItem.Description)</span>
            }
            else
            {
             <span class="desc">@Html.DisplayFor(modelItem => listItem.Description)</span>
            }
            </td>
            <td>
                @Html.DisplayFor(modelItem => listItem.Category.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = listItem.ItemId }) |
                @Html.ActionLink("Details", "Details", new { id = listItem.ItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = listItem.ItemId })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>